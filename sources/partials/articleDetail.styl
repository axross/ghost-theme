.articleDetail
  &__title
    margin-bottom 1rem
    color $headColor
    font-size 2rem
  &__meta
    margin-bottom 1rem
    color $grayColor
  &__body
    margin-bottom 2rem
    articleBodyMixin()
  &__shares
    margin-bottom 2rem
    padding-bottom 2rem
    border-bottom 1px $grayColor dashed
    font-size 0
    &__item
      display inline-block
      margin-right 0.5rem
      vertical-align top
      font-size 1rem
      &:last-child
        margin-right auto
    @media (max-width 320px)
      &__item
        margin-right auto
        transform scale(0.9, 0.9)
