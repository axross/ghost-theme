<nav class="pagination">
  {{#if prev}}
    <a class="pagination__newer" href="{{page_url prev}}">
      &laquo; Newer
    </a>
  {{/if}}

  <span class="pagination__pageNumber">
    Page {{page}} of {{pages}}
  </span>

  {{#if next}}
    <a class="pagination__older" href="{{page_url next}}">
      Older &raquo;
    </a>
  {{/if}}
</nav>
