.header
  position relative
  width 100%
  height 480px
  background url('/assets/img/head.jpg')
  background-position 50% 50%
  background-size cover
  &__inner
    width 100%
    height 100%
    background rgba(0, 0, 0, .25)
    &__title
      position absolute
      top 50%
      width 100%
      height 4.5rem
      margin-top -2.25rem
      background transparent
      text-align center
      &__link
        line-height 4.5rem
        font-size 3rem
        color #fff
